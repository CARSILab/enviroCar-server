{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "name", "description", "created", "modified", "owner" ],
    "additionalProperties": false,
    "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "created": { "$ref": "#/definitions/date-time" },
        "modified": { "$ref": "#/definitions/date-time" },
        "owner": { "$ref": "#/definitions/user-ref" },
    },
    "definitions": {
        "date-time": {
            "type": "string",
            "format": "date-time"
        }
        "user-ref": {
            "type": "object",
            "required": [ "name", "href" ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^[_A-Za-z0-9-]{6,}$"
                },
                "href": {
                    "type": "string",
                    "format": "uri"
                }
            }
        }
    }
}
