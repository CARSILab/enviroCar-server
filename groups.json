{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "groups" ],
    "additionalProperties": false,
    "properties": {
        "groups": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "required": [ "name", "description", "href" ],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        }
    }
}