{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": { 
            "type": "string",
            "pattern": "^[_A-Za-z0-9-]{6,}$"
        },
        "mail": { 
            "type": "string",
            "pattern": "^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$"
        },
        "created": {
            "type": "string",
            "format": "date-time"
        },
        "modified": {
            "type": "string",
            "format": "date-time"
        }
    },
    "additionalProperties": false,
    "required": [ "name" ]
}
