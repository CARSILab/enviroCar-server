{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "date-time": {
            "format": "date-time",
            "type": "string"
        },
        "sensor": {
            "properties": {
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "type": "object"
        },
        "user": {
            "additionalProperties": false,
            "properties": {
                "created": {
                    "$ref": "#/definitions/date-time"
                },
                "mail": {
                    "pattern": "^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$",
                    "type": "string"
                },
                "modified": {
                    "$ref": "#/definitions/date-time"
                },
                "name": {
                    "pattern": "^[_A-Za-z0-9-]{6,}$",
                    "type": "string"
                }
            },
            "required": [
                "name",
                "created",
                "modified"
            ],
            "type": "object"
        }
    },
    "properties": {
        "features": {
            "items": {
                "$ref": "measurement.json#"
            },
            "minItems": 0,
            "type": "array"
        },
        "properties": {
            "created": {
                "$ref": "#/definitions/date-time"
            },
            "identifier": {
                "type": "string"
            },
            "modified": {
                "$ref": "#/definitions/date-time"
            },
            "sensor": {
                "$ref": "#/definitions/sensor"
            },
            "type": "object",
            "user": {
                "$ref": "#/definitions/user"
            }
        },
        "type": {
            "enum": [
                "FeatureCollection"
            ],
            "type": "string"
        }
    },
    "required": [
        "identifier",
        "sensor",
        "created",
        "modified",
        "user"
    ],
    "type": "object"
}
