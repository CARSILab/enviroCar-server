{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "identifier", "sensor", "created", "modified", "user"],
    "properties": {
        "identifier": {
            "type": "string"
        },
        "sensor": {
            "type": "object",
            "required": [ "name" ],
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        },
        "created": {
            "$ref": "#/definitions/date-time"
        },
        "modified": {
            "$ref": "#/definitions/date-time"
        },
        "user": {
            "type": "object",
            "required": [ "name", "created", "modified" ],
            "additionalProperties": false,
            "properties": {
                "name": { 
                    "type": "string",
                    "pattern": "^[_A-Za-z0-9-]{6,}$"
                },
                "mail": { 
                    "type": "string",
                    "pattern": "^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$"
                },
                "created": {
                    "$ref": "#/definitions/date-time"
                },
                "modified": {
                    "$ref": "#/definitions/date-time"
                }
            }
        },
        "measurements": {
            "type": "array",
            "minItems": 0,
            "items": {
                "$ref": "measurement.json#"
            }
        }
    },
    "definitions": {
        "date-time": {
            "type": "string",
            "format": "date-time"
        }
    }
}
