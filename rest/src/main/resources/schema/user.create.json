{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "mail": {
            "pattern": "^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$",
            "type": "string"
        },
        "name": {
            "pattern": "^[_A-Za-z0-9-]{6,}$",
            "type": "string"
        },
        "token": {
            "type": "string"
        }
    },
    "required": [
        "name",
        "mail",
        "token"
    ],
    "type": "object"
}
